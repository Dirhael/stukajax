= simple_form_for(@post) do |f|
  = f.error_notification

  .form-inputs
    = f.input :title, required: true, label: false, placeholder: 'Title', input_html: { class: 'form-control'}
    = f.input :content, required: true, label: false, placeholder: 'Content', input_html: { class: 'form-control'}

  .form-actions
    = f.button :submit